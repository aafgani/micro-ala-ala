<section class="content">
    <div class="container-fluid">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">To-Do List</h3>
                <div class="card-tools">
                    <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#addTaskModal">Add Task</button>
                </div>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <input type="checkbox" class="mr-2">
                            <a href="#" class="task-title text-dark" data-task-id="1">Finish profile page</a>
                            <small class="d-block text-muted">Due: May 15, 2025</small>
                        </div>
                        <div>
                            <button class="btn btn-info btn-sm mr-2 edit-task" data-task-id="1">Edit</button>
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Modal for adding new task -->
@await Html.PartialAsync("ModalAddTask")

<!-- Modal for edit new task -->
@await Html.PartialAsync("ModalEditTask")

<script src="~/js/todo.js"></script>

