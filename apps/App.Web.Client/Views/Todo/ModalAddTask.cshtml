<div class="modal fade" id="addTaskModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <form class="modal-content" id="addTaskForm">
            <div class="modal-header bg-success">
                <h5 class="modal-title"><i class="fas fa-plus"></i> Add New Task</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <!-- Title -->
                        <div class="form-group">
                            <label for="newTaskTitle">
                                <i class="fas fa-tasks"></i> Task Title <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" id="newTaskTitle" name="title" required>
                        </div>

                        <!-- Due Date -->
                        <div class="form-group">
                            <label for="newTaskDueDate">
                                <i class="fas fa-calendar-day"></i> Due Date <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="text" class="form-control datepicker" id="newTaskDueDate" name="dueDate" required>
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                            </div>
                        </div>

                        <!-- Assignee -->
                        <div class="form-group">
                            <label for="newTaskAssignee">
                                <i class="fas fa-user"></i> Assign To
                            </label>
                            <select class="form-control" id="newTaskAssignee" name="assignedTo">
                                <option value="John Doe">John Doe</option>
                                <option value="Jane Smith">Jane Smith</option>
                                <option value="Mike Johnson">Mike Johnson</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <!-- Description -->
                        <div class="form-group">
                            <label for="newTaskDescription">
                                <i class="fas fa-align-left"></i> Description
                            </label>
                            <textarea class="form-control" id="newTaskDescription" name="description" rows="3"></textarea>
                        </div>

                        <!-- Tags -->
                        <div class="form-group">
                            <label for="newTaskTags">
                                <i class="fas fa-tags"></i> Tags
                            </label>
                            <select class="form-control select2-tags" id="newTaskTags" name="tags[]" multiple>
                                <option value="Work">Work</option>
                                <option value="Personal">Personal</option>
                                <option value="Important">Important</option>
                                <option value="Documentation">Documentation</option>
                                <option value="Bug">Bug</option>
                                <option value="Feature">Feature</option>
                                <option value="Meeting">Meeting</option>
                                <option value="Client">Client</option>
                            </select>
                            <small class="form-text text-muted">You can select multiple tags or create new ones</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Create Task
                </button>
            </div>
        </form>
    </div>
</div>
