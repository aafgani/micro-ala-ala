<div class="modal fade" id="editTaskModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <form class="modal-content" id="editTaskForm">
            <div class="modal-header bg-info">
                <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Task</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editTaskId" name="id">
                <div class="row">
                    <div class="col-md-6">
                        <!-- Title -->
                        <div class="form-group">
                            <label for="editTaskTitle">
                                <i class="fas fa-tasks"></i> Task Title <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" id="editTaskTitle" name="title" required>
                        </div>

                        <!-- Due Date -->
                        <div class="form-group">
                            <label for="editTaskDueDate">
                                <i class="fas fa-calendar-day"></i> Due Date <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="text" class="form-control datepicker" id="editTaskDueDate" name="dueDate" required>
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                            </div>
                        </div>

                        <!-- Assignee -->
                        <div class="form-group">
                            <label for="editTaskAssignee">
                                <i class="fas fa-user"></i> Assign To
                            </label>
                            <select class="form-control" id="editTaskAssignee" name="assignedTo">
                                <option value="John Doe">John Doe</option>
                                <option value="Jane Smith">Jane Smith</option>
                                <option value="Mike Johnson">Mike Johnson</option>
                            </select>
                        </div>

                        <!-- Status -->
                        <div class="form-group">
                            <label for="editTaskStatus">
                                <i class="fas fa-check-circle"></i> Status
                            </label>
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" id="editTaskStatus" name="isCompleted">
                                <label class="custom-control-label" for="editTaskStatus">Mark as completed</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <!-- Description -->
                        <div class="form-group">
                            <label for="editTaskDescription">
                                <i class="fas fa-align-left"></i> Description
                            </label>
                            <textarea class="form-control" id="editTaskDescription" name="description" rows="3"></textarea>
                        </div>

                        <!-- Tags -->
                        <div class="form-group">
                            <label for="editTaskTags">
                                <i class="fas fa-tags"></i> Tags
                            </label>
                            <select class="form-control select2-tags" id="editTaskTags" name="tags[]" multiple>
                                <option value="Work">Work</option>
                                <option value="Personal">Personal</option>
                                <option value="Important">Important</option>
                                <option value="Documentation">Documentation</option>
                                <option value="Bug">Bug</option>
                                <option value="Feature">Feature</option>
                                <option value="Meeting">Meeting</option>
                                <option value="Client">Client</option>
                            </select>
                            <small class="form-text text-muted">You can select multiple tags or create new ones</small>
                        </div>

                        <!-- Created/Updated Info -->
                        <div class="form-group">
                            <label><i class="fas fa-info-circle"></i> Task Information</label>
                            <div class="card bg-light">
                                <div class="card-body py-2">
                                    <small class="d-block"><strong>Created:</strong> <span id="editTaskCreatedAt"></span></small>
                                    <small class="d-block"><strong>Last Updated:</strong> <span id="editTaskUpdatedAt"></span></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-info">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
