<!-- Summernote CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet">

<!-- Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<!-- Bootstrap Datepicker CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card card-info card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-tasks"></i> To-Do Detail - <span id="todoTitleDisplay">Design UI Layout</span>
                        </h3>
                    </div>

                    <div class="card-body">
                        <!-- Title-->
                        @await Html.PartialAsync("_FormGroup", new FormGroupModel
                       {
                           Label = "To-Do Title",
                           Icon = "fas fa-tasks",
                           Id = "todoTitle",
                           Name = "todoTitle",
                           Type = "text",
                           Placeholder = "Enter to-do title",
                           Value = "Model?.TodoTitle"
                       })

                        <!-- Due Date-->
                        @await Html.PartialAsync("_FormGroup", new FormGroupModel
                        {
                           Label = "Due Date",
                           Icon = "fas fa-calendar-day",
                           Id = "dueDate",
                           Name = "dueDate",
                           Type = "text",
                           Placeholder = "Select due date",
                           IsInputGroup = true,
                           InputGroupAppendHtml = "<div class='input-group-append'><span class='input-group-text'><i class='far fa-calendar-alt'></i></span></div>"
                       })

                        <!-- Assignee Section -->
                        @await Html.PartialAsync("_FormGroup", new FormGroupModel
                        {
                           Label = "Assignee",
                           Icon = "fas fa-user",
                           Id = "assignee",
                           Name = "assignee",
                           Type = "select",
                           Options = new List<SelectListItem> {
                            new SelectListItem("John Doe", "1"),
                            new SelectListItem("Jane Smith", "2"),
                            new SelectListItem("Mike Johnson", "3")
                           }
                         })

                        <!-- Reminder Section -->
                        @await Html.PartialAsync("_FormGroup", new FormGroupModel
                        {
                           Label = "Reminder",
                           Icon = "fas fa-bell",
                           Id = "reminder",
                           Name = "reminder",
                           Type = "datetime-local",
                        })

                        <!-- Steps Section (Dynamic Textboxes) -->
                        <div class="form-group">
                            <label>
                                <i class="fas fa-list-ul"></i> Steps
                            </label>
                            <div id="steps-container">
                                @await Html.PartialAsync("_DynamicStep", "")
                            </div>
                            <button class="btn btn-primary" id="add-step" type="button">
                                <i class="fas fa-plus"></i> Add Step
                            </button>
                        </div>

                        <!-- File Upload Section -->
                        @await Html.PartialAsync("_FormGroup", new FormGroupModel{
                            Label ="FileUpload",
                            Icon ="fas fa-upload",
                            Id ="fileUpload",
                            Name = "fileUpload",
                            Type = "file"
                        })

                        <!-- Tags -->
                       @await Html.PartialAsync("_FormGroup", new FormGroupModel
                       {
                           Label = "Tags",
                           Icon = "fas fa-tags",
                           Id = "todoTags",
                           Name = "todoTags",
                           Type = "select",
                           Multiple = true,
                           Options = new List<SelectListItem> {
                            new SelectListItem("My Day", "My Day"),
                            new SelectListItem("Important", "Important"),
                            new SelectListItem("Work", "Work"),
                            new SelectListItem("Personal", "Personal")
                            }
                       })

                        <!-- Notes -->
                        @await Html.PartialAsync("_FormGroup", new FormGroupModel{
                            Label = "Notes",
                            Icon = "fas fa-sticky-note",
                            Id = "notes",
                            Name = "notes",
                            Type = "textarea",
                        })

                        <!-- Save Button -->
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <a href="/todo" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to To-Do List
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</section>

<script>
  $(document).ready(function () {
    $('#notes').summernote({
      height: 200,   // set editor height
      placeholder: 'Write your notes here...',
      toolbar: [
        ['style', ['bold', 'italic', 'underline', 'clear']],
        ['para', ['ul', 'ol', 'paragraph']],
        ['insert', ['link']],
        ['view', ['codeview']]
      ]
    });
    
    $('#todoTitle').on('input', function () {
      $('#todoTitleDisplay').text($(this).val());
    });

       
  });

     

</script>

<!-- Summernote JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>

<!-- Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<!-- Bootstrap Datepicker JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>