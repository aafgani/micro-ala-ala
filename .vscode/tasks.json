// 	Builds your .csproj or .sln (compile only)
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-todo-api",
      "type": "shell",
      "command": "dotnet clean src/apps/App.Api.Todo/App.Api.Todo.csproj && dotnet build src/apps/App.Api.Todo/App.Api.Todo.csproj",
      "workingDirectory": "${workspaceFolder}",
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-web-client",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/apps/App.Web.Client/App.Web.Client.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-web-ui",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/apps/App.Web.UI/App.Web.UI.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch-web-ui",
      "type": "process",
      "command": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/apps/App.Web.UI/App.Web.UI.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "background": {
        "activeOnStart": true,
        "beginsPattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "endsPattern": "\\bApplication started\\. Press Ctrl\\+C to shut down\\b"
      }
    },
    {
      "label": "build sln",
      "type": "process",
      "command": "dotnet",
      "args": ["build", "${workspaceFolder}/mini-micoservices.sln"],
      "problemMatcher": {
        "owner": "csharp",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*\\.cs)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+(\\w+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Run Tests Todo API",
      "type": "shell",
      "command": "./infra/tools/coverage/run-test-todo-api.ps1",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run Sonar Scan Todo API",
      "type": "shell",
      "command": "./infra/tools/coverage/run-sonar-todo-api.ps1",
      "problemMatcher": []
    },
    {
      "label": "Test and Sonar Todo API",
      "dependsOn": ["Run Tests Todo API", "Run Sonar Scan Todo API"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}
