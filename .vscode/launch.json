// Runs the built .dll when debugging
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "web-ui",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-web-ui",
      "program": "${workspaceFolder}/src/apps/App.Web.UI/bin/Debug/net8.0/App.Web.UI.dll", // the entry point for the debugger
      "args": [],
      "cwd": "${workspaceFolder}/src/apps/App.Web.UI",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": "web-ui (Hot Reload)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "watch-web-ui",
      "program": "${workspaceFolder}/src/apps/App.Web.UI/bin/Debug/net8.0/App.Web.UI.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/apps/App.Web.UI",
      "stopAtEntry": false,
      "console": "internalConsole",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "todo-api",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-todo-api",
      "program": "${workspaceFolder}/src/apps/App.Api.Todo/bin/Debug/net8.0/App.Api.Todo.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/apps/App.Api.Todo",
      "stopAtEntry": false,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Start API and Web Client",
      "configurations": ["todo-api", "web-app"]
    }
  ]
}
