@{
    ViewData["Title"] = "User Profile";
}

<div class="app-main">
    <div class="app-content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6"><h3 class="mb-0">User Profile</h3></div>
            </div>
        </div>
    </div>
    <br />
    <div class="app-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">User Profile</h3>
                            <div class="card-tools">
                                <button class="btn btn-sm btn-primary" onclick="toggleEdit()">Edit</button>
                            </div>
                        </div>
                        <div class="card-body" id="profile-view">
                            <strong>Full Name:</strong> <p class="text-muted" id="full-name">John Doe</p>
                            <strong>Email:</strong> <p class="text-muted" id="email">john@example.com</p>
                            <strong>Username:</strong> <p class="text-muted" id="username">johnd</p>
                        </div>

                        <form id="profile-form" class="card-body d-none">
                            <div class="form-group">
                                <label for="inputName">Full Name</label>
                                <input type="text" class="form-control" id="inputName" value="John Doe">
                            </div>
                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                <input type="email" class="form-control" id="inputEmail" value="john@example.com">
                            </div>
                            <div class="form-group">
                                <label for="inputUsername">Username</label>
                                <input type="text" class="form-control" id="inputUsername" value="johnd">
                            </div>
                            <button type="submit" class="btn btn-success">Save</button>
                            <button type="button" class="btn btn-secondary" onclick="toggleEdit()">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleEdit() {
          document.getElementById('profile-view').classList.toggle('d-none');
          document.getElementById('profile-form').classList.toggle('d-none');
        }
    </script>
