@{
    ViewData["Title"] = "My TodoList";
    var filter = Context.Request.Query["filter"].ToString();
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>My TodoList</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">My TodoList</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                @{
                    ViewData["LoaderMessage"] = "Loading tasks...";
                }
                @await Html.PartialAsync("_LoaderPartial", "todoListLoader")
                <div id="todoListContent"></div>
            </div>
        </div>
    </div>
</section>

<!-- Add Task Modal -->
@await Html.PartialAsync("ModalAddTask")

<!-- Edit Task Modal -->
@await Html.PartialAsync("ModalEditTask")

@section Scripts {
    <script src="~/js/todo.js"></script>
    <script>
        $(document).ready(function() {
            // Load todo list content
            loadTodoList('@filter');
            
            // Set up navigation
            setupNavigation();
        });
        
        // Using the generic loadContent function from todo.js
        
        function setupNavigation() {
            // Handle sidebar navigation
            $(".nav-link").on("click", function(e) {
                var href = $(this).attr("href");
                
                // If it's a Todo section link, handle it
                if (href === "/Todo/Index") {
                    e.preventDefault();
                    loadTodoList();
                    history.pushState(null, null, href);
                }
            });
        }
    </script>
}
