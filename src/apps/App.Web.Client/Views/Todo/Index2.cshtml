@section Scripts {
    <!-- jQuery UI for sortable functionality -->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize todo-list sortable functionality
            $('.todo-list').sortable({
                placeholder: "sort-highlight",
                handle: ".handle",
                forcePlaceholderSize: true,
                zIndex: 999999,
                tolerance: "pointer",
                update: function (event, ui) {
                    console.log('Todo item reordered');
                    // Optional: Send AJAX request to save new order
                }
            });

            // Handle checkbox state changes
            $('.todo-list input[type="checkbox"]').on('change', function () {
                var $li = $(this).closest('li');
                if ($(this).is(':checked')) {
                    $li.addClass('done');
                } else {
                    $li.removeClass('done');
                }
            });

            // Handle tool actions
            $('.todo-list .tools i').on('click', function (e) {
                e.preventDefault();
                var $this = $(this);
                var $li = $this.closest('li');

                if ($this.hasClass('fa-edit')) {
                    // Edit functionality
                    var currentText = $li.find('.text').text();
                    var newText = prompt('Edit todo item:', currentText);
                    if (newText && newText !== currentText) {
                        $li.find('.text').text(newText);
                    }
                } else if ($this.hasClass('fa-trash-o')) {
                    // Delete functionality
                    if (confirm('Are you sure you want to delete this item?')) {
                        $li.fadeOut(300, function () {
                            $(this).remove();
                        });
                    }
                }
            });

            // Add new item functionality
            $('.btn-primary').on('click', function () {
                var newText = prompt('Enter new todo item:');
                if (newText) {
                    var newId = 'todo' + Date.now();
                    var newItem = `
                                <li>
                                    <span class="handle ui-sortable-handle">
                                        <i class="fas fa-ellipsis-v"></i>
                                        <i class="fas fa-ellipsis-v"></i>
                                    </span>
                                    <div class="icheck-primary d-inline ml-2">
                                        <input type="checkbox" value="" name="${newId}" id="${newId}Check">
                                        <label for="${newId}Check"></label>
                                    </div>
                                    <span class="text">${newText}</span>
                                    <small class="badge badge-info"><i class="far fa-clock"></i> Just now</small>
                                    <div class="tools">
                                        <i class="fas fa-edit"></i>
                                        <i class="fas fa-trash-o"></i>
                                    </div>
                                </li>`;
                    $('.todo-list').append(newItem);
                }
            });
        });
    </script>
