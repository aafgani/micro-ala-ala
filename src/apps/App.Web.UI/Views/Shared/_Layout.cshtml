<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - App.Web.UI</title>
    <script type="importmap"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Pace theme -->
    <link href="~/lib/pace/themes/blue/pace-theme-minimal.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/dist/css/all.min.css" />
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/lib/admin-lte/dist/css/adminlte.min.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap-icons/dist/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="~/lib/toastr/build/toastr.min.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <div class="wrapper">
        <!-- Navbar -->

        @await Html.PartialAsync("_Navbar")
        <!-- Sidebar -->
        @await Html.PartialAsync("_Sidebar")

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <section class="content pt-3">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        @await Component.InvokeAsync("Footer")
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <!-- Pace script -->
    <script src="~/lib/pace/pace.min.js" asp-append-version="true"></script>
    <script src="~/js/pace-options.js" asp-append-version="true"></script>
    <!-- Bootstrap Bundle -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <!-- Toastr JS -->
    <script src="~/lib/toastr/build/toastr.min.js"></script>
    <!-- Admin LTE  -->
    <script src="~/lib/admin-lte/dist/js/adminlte.min.js" asp-append-version="true"></script>
    <!-- Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Initialize Toastr -->
    <script>
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right", // top-left, bottom-right, etc.
            "preventDuplicates": true,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        $(document).ready(function () {
            $('body').Layout('fixLayoutHeight');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
